<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Joke Finder</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="header">
        <h1>Joke Finder</h1>
    </div>
    <div class="container">
    <h3>Categories:</h3>
    <form action="/submit" method="POST">
    <% jokeCategories.forEach(category => { %>
     <input type="radio" id="<%= category %>" name="category" value="<%= category %>">
     <label for="<%= category %>"><%= category %></label>
     <br>
    <% }) %>
    <br><br>
    <button type="submit">Get a joke!</button>
    </form>

    <% if (joke) {%>
        <h3>Your joke:</h3>
        <% if (joke.type === 'single' ) { %>
            <p> <%= joke.joke %></p>
        <% } else if (joke.type === 'twopart') {%>
            <p><%= joke.setup %></p>
            <p><%= joke.delivery %></p>
        <% } %>
    <% } %>
    <% if (error) {%>
        <p> Error occured: <%= error %></p>
    <% }%>
    </div>
</body>
</html>